<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.myapplication.ui.activity.MainActivity">
        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:title="38#722实训"
            >
        </android.support.v7.widget.Toolbar>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager_01"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">


        </android.support.v4.view.ViewPager>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
          />

        <RadioGroup
            android:id="@+id/rg_01"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/rb_new"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:background="#00000000"
                android:checked="true"
                android:drawableTop="@drawable/selector_home_01"
                android:gravity="center"
                android:padding="0dp"
                android:text="新闻"
                android:textSize="12sp"
                android:textColor="@color/select_home_tab_color"/>

            <RadioButton
                android:id="@+id/rb_video"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:background="#00000000"
                android:drawableTop="@drawable/selector_home_03"
                android:gravity="center"
                android:padding="0dp"
                android:text="视听"
                android:textSize="12sp"
                android:textColor="@color/select_home_tab_color"/>

            <RadioButton
                android:id="@+id/rb_read"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:background="#00000000"
                android:checked="false"
                android:drawableTop="@drawable/selector_home_02"
                android:gravity="center"
                android:padding="0dp"
                android:text="阅读"
                android:textSize="12sp"
                android:textColor="@color/select_home_tab_color"/>

            <RadioButton
                android:id="@+id/rb_find"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:background="#00000000"
                android:drawableTop="@drawable/selector_home_04"
                android:gravity="center"
                android:padding="0dp"
                android:text="发现"
                android:textSize="12sp"
                android:textColor="@color/select_home_tab_color"/>

            <RadioButton
                android:id="@+id/rb_setting"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:background="#00000000"
                android:drawableTop="@drawable/selector_home_05"
                android:gravity="center"
                android:padding="0dp"
                android:text="设置"
                android:textSize="12sp"
                android:textColor="@color/select_home_tab_color"/>
        </RadioGroup>
    </LinearLayout>

<android.support.design.widget.NavigationView
    android:id="@+id/navigation_view"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    app:headerLayout="@layout/navigation_view_header"
    app:menu="@menu/main"
    />

</android.support.v4.widget.DrawerLayout>


